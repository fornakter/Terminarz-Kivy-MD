ScreenManager:
    MenuScreen:
    ScanScreen:

<ScanScreen>:
    name: 'scan'
    MDBoxLayout:
        MDRaisedButton:
            text: "Powrot"
            pos_hint: {"center_x":.5, "center_y":.5}
            on_press: root.manager.current = 'menu'

<MenuScreen>:
    name: 'menu'
    MDBoxLayout:

        MDBoxLayout:
            size_hint: .5, 1
            #MDCard:
            #    md_bg_color: 1, 0, 0, .2

        MDBoxLayout:
            padding: 16
            orientation: 'vertical'
            MDTextField:
                hint_text: "Kod kreskowy"
            MDRaisedButton:
                text: "Skanuj kod"
                pos_hint: {"center_x":.5, "center_y":.5}
                on_press: root.manager.current = 'scan'
            MDTextField:
                hint_text: "Kod PLU"
            MDTextField:
                hint_text: "Nazwa towaru"
            MDTextButton:
                text: "Termin ważności"
                pos_hint: {"center_x":.5, "center_y":.5}
                enabled: False

            MDRaisedButton:
                text: "Wybierz datę"
                id: date_button
                pos_hint: {"center_x":.5, "center_y":.5}
                on_release: app.show_date_picker()
            MDRaisedButton:
                text: "Zapisz"
                id: save_button
                pos_hint: {"center_x":.5, "center_y":.5}


        MDBoxLayout:
            size_hint: .5, 1
            MDCard:
                md_bg_color: 0, 0, 1, .1

