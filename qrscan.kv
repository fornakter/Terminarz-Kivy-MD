ScreenManager:
    FirstWindow:
    SecoundWindow:


<FirstWindow>:
    name: 'first'
    MDBoxLayout:
        MDBoxLayout:
            size_hint: .5, 1
            MDCard:
                md_bg_color: 1, 0, 0, .5


        MDBoxLayout:
            orientation: 'vertical'
            MDRaisedButton:
                text: "Skanuj kod"
                pos_hint: {'center_x': .5, 'center_y': .5}
                id: Skanuj_kod
                on_press:
                    root.manager.current = 'secound'
                    root.manager.transition.direction = 'left'

            MDTextField:
                id: kod_kreskowy
                hint_text: "Kod kreskowy"
                required: True
                helper_text_mode: "on_error"
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDTextField:
                hint_text: "PLU"
                required: True
                helper_text_mode: "on_error"
                input_filter: 'int'
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDTextField:
                hint_text: "Nazwa towaru"
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDLabel:
                text: "Data tostawy:"
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDRaisedButton:
                text: "Dzisiaj"
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDLabel:
                text: "Data przydatnosci:"
                pos_hint: {'center_x': .5, 'center_y': .5}

            MDRaisedButton:
                text: "Wybierz datÄ™"
                id: date_button
                pos_hint: {'center_x': .5, 'center_y': .5}
                on_press:
                    app.show_date_picker()

            MDRaisedButton:
                text: "Zapisz"
                pos_hint: {'center_x': .5, 'center_y': .5}


        MDBoxLayout:
            size_hint: .5, 1
            MDCard:
                md_bg_color: 0, 1, 0, .5

<SecoundWindow>:
    name: 'secound'
	BoxLayout:
		orientation: 'vertical'
		ScanAnalyze:
			id: preview
			aspect_ratio: '16:9'
			extracted_data: root.got_result

		MDLabel:
			size_hint_y: None
			height:'130dp'
			id:ti